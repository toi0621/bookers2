<body>
 <main>
　<%= flash[:notice] %>
  <div class="container px-5 px-sm-0">
   <div class="row">
    <div class="col-md-3">
     <%= render 'users/info', user:@user %>
     <%= render 'books/form', book:@booknew %>
    </div>
    <div class="col-md-8 offset-md-1">
     <h2>Book detail</h2>
      <table class="table">
       <tbody>
        <tr>
         <td>
          <%= link_to user_path(@user.id) do %>
           <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
          <% end %>
           <br>
          <%= link_to user_path(@user.id) do %>
           <p><%= @book.user.name %></p>
          <% end %>
         </td>

         <td>
          <%= link_to @book.title, book_path(@book) %>
         </td>

         <td>
          <%= @book.body %>
         </td>

         <td>
          <% if @book.user == current_user %>
          <%= link_to "Edit",edit_book_path(@book), class: "btn btn-sm btn-success edit_book_id" %>
          <% end %>
         </td>

         <td>
          <% if @book.user == current_user %>
          <%= link_to "Destroy",book_path(@book), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book_id" %>
          <% end %>
         </td>

         <td>
          <% if current_user.already_favorited?(@book) %>
           <%= link_to book_favorites_path(@book), method: :delete do %>
            <i class="fas fa-heart"></i>
           <% end %>
          <% else %>
           <%= link_to book_favorites_path(@book), method: :create do %>
            <i class="far fa-heart"></i>
           <% end %>
          <% end %>
          <%= @book.favorites.count %>
         </td>

         <td>
          <p>コメント件数：<%= @book.book_comments.count %></p>
         </td>
        </tr>
       </tbody>
      </table>

      <div>
       <% @book.book_comments.each do |book_comment| %>
       <table class="table table-hover table-inverse">
        <tbody>
         <tr>
          <td>
           <%= link_to user_path(@user.id) do %>
            <%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
           <% end %>
           <br>
           <%= link_to user_path(@user.id) do %>
            <p><%= book_comment.user.name %></p>
           <% end %>
          </td>
           
          <td>
           <p><%= book_comment.comment %></p>
          </td>
          
          <td>
           <% if book_comment.user == current_user %>
            <%= link_to "Destroy",book_book_comment_path(book_comment.book,book_comment), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-sm btn-danger destroy_book_id" %>
           <% end %>
          </td>
         </tr>
        </tbody>
       </table>
       <% end %>
      </div>

      <div>
       <%= form_with(model:[@book,@book_comment], local: true) do |f| %>
        <%= f.text_area :comment, rows:'5',placeholder: "コメントをここに" %>
        <%= f.submit "送信する" %>
       <% end %>
      </div>
    </div>
   </div>
  </div>
 </main>
</body>